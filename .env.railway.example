# Variables de entorno para Railway - Backend

# Perfil de Spring Boot
SPRING_PROFILES_ACTIVE=prod

# Base de Datos MySQL (Railway)
# Obtener estos valores del servicio MySQL en Railway
DB_HOST=containers-us-west-xxx.railway.app
DB_PORT=7xxx
DB_NAME=railway
DB_USERNAME=root
DB_PASSWORD=TU_PASSWORD_DE_RAILWAY

# Frontend URL (actualizar después de desplegar en Vercel)
FRONTEND_URL=https://tu-frontend.vercel.app

# Puerto (Railway lo asigna automáticamente)
PORT=8080

# Java Options (opcional)
JAVA_OPTS=-Xmx512m -Xms256m

